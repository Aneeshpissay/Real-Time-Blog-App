<head>
<title>Reset Password</title>
</head>
<%- include('partials/header') %>
<div class="container page">
<%- include('partials/messages') %>
<div class="jumbotron shadow-lg">
<h1>Reset Password</h1>
<div class="col-md-6 text-center mx-auto">
<form action="/reset/<%= token %>" method="POST">
	<div class="form-group input-group">
		<input class="form-control" type="password" id="pass3" name="password" placeholder="New Password" required>
		<div class="input-group-prepend">
			<div class="input-group-text">
				<a href="#" class="text-dark icon-click3">
					<i class="fa fa-eye icon3"></i>
				</a>
			</div>
		</div>
	</div>
	<div class="form-group input-group">
		<input class="form-control" type="password" id="pass4" name="password2" placeholder="Confirm Password" required>
		<div class="input-group-prepend">
			<div class="input-group-text">
				<a href="#" class="text-dark icon-click4">
					<i class="fa fa-eye icon4"></i>
				</a>
			</div>
		</div>
	</div>
	<div class="form-group">
		<button class="btn btn-large btn-success btn-block">Update Password</button>
	</div>
</form>
</div>
</div>
</div>
<%- include('partials/footer') %>
<script type="text/javascript">
	bootstrapValidate('#pass4','matches:#pass3:Your password should match')
</script>