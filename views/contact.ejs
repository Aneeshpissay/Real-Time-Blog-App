<head>
<title>Contact</title>
</head>
<%- include('partials/header') %>
<div class="container page">
<%- include('partials/messages') %>
<div class="jumbotron shadow-lg">
<h1 class="">Contact Form</h1>
<hr>
<div class="col-md-6 text-center mx-auto">
<form action="/contact" method="POST">
	<div class="form-group input-group">
		<input class="form-control" type="text" name="username" placeholder="Username" value="<%= currentUser.username %>" readonly>
		<div class="input-group-prepend">
			<div class="input-group-text">
			<i class="fa fa-user" aria-hidden="true"></i>
			</div>
		</div>
	</div>
	<div class="form-group input-group">
		<input class="form-control" type="email" id="email" name="email" placeholder="Email" value="<%= currentUser.email %>" readonly>
		<div class="input-group-prepend">
			<div class="input-group-text">
			<i class="fa fa-envelope" class="icon"></i>
			</div>
		</div>
	</div>
	<div class="form-group input-group">
		<textarea placeholder="Enter your message" name="message" id="message1" required></textarea>
	</div>
	<div class="form-group">
		<button class="btn btn-large btn-success btn-block">Send</button>
	</div>
</form>
<div>
<a class="btn btn-primary" href="/">Go Back</a>
</div>
</div>
</div>
</div>
<%- include('partials/footer') %>