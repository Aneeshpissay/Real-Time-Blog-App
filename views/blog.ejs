<head>
<title>Blogs</title>
</head>
<%- include("partials/header") %>
<div class="container page">
<%- include('partials/messages') %>
	<div class="jumbotron shadow">
		<h1>This is a Blog Page</h1>
		<hr>
		<h5>Create new blog</h5>
		<br>
		<div class="mx-auto col-md-6 text-center">
		<form action="/blogs" method="POST" enctype="multipart/form-data" id="blog-upload" onsubmit="setTimeout(doBlog(this),5000)">
		 <div class="form-group input-group">
			<input class="form-control file" type="file" id="file" name="file" required>
		</div>
		<input type="hidden" id="user_name1" name="user_name1" value="<%= currentUser.username %>">
		<div class="form-group input-group">
			<input class="form-control" type="text" id="title" name="title" placeholder="Enter your blog title" required>
		</div>
		<div class="form-group input-group">
			<textarea class="form-control" type="text" id="desc" name="description" placeholder="Enter your blog description" required></textarea>
		</div>
		<button class="btn btn-primary btn-block"onclick="setTimeout(blog, 1000);">Submit</button>
		</form>
	</div>
	<hr>
		<h4>Search Blog</h4>
		<div class="mx-auto col-md-6 text-center">
		<form action="/blogs" method="GET">
		 <div class="form-group input-group">
       		<input class="form-control" type="search" id="search" name="search" placeholder="Seach Blog Post...">
  	  	</div>
  	  		<input value="Search" type="submit" class="btn btn-info btn-block">
  	  	</form>
		</div>
	</div>
	<div class="row">
	<div class="container">
		<% if(noMatch!==null) {%>
			<h3><%= noMatch %></h3>
		<% } %>
	</div>
	<% files.forEach(function(file) { %>
	<div class="col-12 col-md-6 col-lg-4 col-xl-4 mt-5">
	<div class="card shadow" style="width: 18rem;">
  <img class="card-img-top" src="/uploads/<%=file.image%>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= file.title %></h5>
    <h6 class="card-text"><%= file.description %></h6>
    <p>Created By: <%=file.name %></p>
    <a href="/blogs/<%= file._id %>" class="btn btn-primary">View</a>
    </div>
    </div>
  </div>
  <% }) %>
</div>
</div>
<%- include("partials/footer") %>